@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>SATIŞ ID</th>
            <th>ÜRÜN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM</th>
            <th>TARİH</th>
            <th>GÜNCELLE</th>
            <th>YAZDIR</th>
        </tr>
    </thead>

    @foreach (var s in Model)
    {
<tr>
    <td>@s.SatisID</td>
    <td>@s.Urun.UrunAd</td>
    <td>@s.Cariler.CariAd @s.Cariler.CariSoyad</td>
    <td>@s.Personel.PersonelAd @s.Personel.PersonelSoyad</td>
    <td>@s.Adet</td>
    <td>@s.Fiyat</td>
    <td>@s.ToplamTutar</td>
    <td>@s.Tarih.ToShortDateString() @s.Tarih.ToShortTimeString()</td>
    <td><a href="/Satis/SatisGetir/@s.SatisID" class="btn btn-warning">GÜNCELLE</a></td>
    <td><a href="/Departman/Rapor/@s.SatisID" class="btn btn-default" style="background-color:dodgerblue">YAZDIR</a></td>
</tr>
    }

</table>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>


