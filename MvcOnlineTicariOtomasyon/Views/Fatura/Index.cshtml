@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:25px">
    <tr>
        <th>SERİ SIRA NO</th>
        <th>VERGİ DAİRESİ</th>
        <th>TARİH</th>
        <th>TESLİM EDEN</th>
        <th>TESLİM ALAN</th>
        <th>TOPLAM</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>

    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.FaturaSeriNo @f.FaturaSıraNo</td>
                <td>@f.VergiDairesi</td>
                <td>@Convert.ToDateTime(f.Tarih).ToString("dd/MM/yyyy") @f.Saat</td>
                <td>@f.TeslimEden</td>
                <td>@f.TeslimAlan</td>
                <td>@f.Toplam ₺ </td>
                <td><a href="/Fatura/FaturaGetir/@f.FaturaID" class="btn btn-warning">GÜNCELLE</a></td>
                <td><a href="/Fatura/FaturaDetay/@f.FaturaID" class="btn btn-info">DETAYLAR</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-danger">YENİ FATURA GİRİŞİ</a>
<br />
<br />

<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#Modal1">POPUP PENCERESİ</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">POPUP DİALOG EKRANI</h3>
            </div>

            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>SERI NO</td>
                        <td>SIRA NO</td>
                        <td>TUTAR</td>                     
                    </tr>
                     
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">VAZGEÇ</button>   @* dismiss: reddet, vazgeç *@
            </div>
        </div>
    </div>
</div>
