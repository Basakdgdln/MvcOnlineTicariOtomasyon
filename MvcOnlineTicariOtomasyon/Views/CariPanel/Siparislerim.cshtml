@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparişlerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<br />
<table class="table table-striped table-bordered">
    <tr>
        <th>ÜRÜN ADI</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM TUTAR</th>
        <th>ALICI</th>
        <th>TARİH</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
            <td>@x.Tarih.ToShortDateString() @x.Tarih.ToShortTimeString()</td>
        </tr>
    }
</table>

