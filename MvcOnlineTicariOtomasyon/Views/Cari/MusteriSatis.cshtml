@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket> 
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">MÜŞYERİ ADI : @ViewBag.cari</li>
</ol>

<table class="table table-condensed">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        <th>YAZDIR</th>
    </tr>

    @foreach (var s in Model)
    {
        <tr>
            <td>@s.SatisID</td>
            <td>@s.Urun.UrunAd</td>
            <td>@s.Personel.PersonelAd @s.Personel.PersonelSoyad</td>
            <td>@s.Fiyat</td>
            <td>@s.Adet</td>
            <td>@s.ToplamTutar</td>
            <td>@s.Tarih.ToShortDateString() @s.Tarih.ToShortTimeString()</td>
            <td><a href="/Cari/Rapor/@s.SatisID" class="btn btn-default" style="background-color:dodgerblue">YAZDIR</a></td>
        </tr>
    }
</table>



