@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Kategori>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Kategori Ad</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Oran</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.KategoriAd</td>
                        <td>
                            @if (sirano % 2 == 0)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 70%">
                                    </div>
                                </div>
                            }

                            @if (sirano % 2 == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: 55%">
                                    </div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-danger">2</span></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
